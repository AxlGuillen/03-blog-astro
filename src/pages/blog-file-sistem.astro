---
import { siteConfig } from "../config/site-config"
import MainLayout from "../layouts/MainLayout.astro"
import BlogPost from "../components/BlogPost.astro"
import type { ACTION_ERROR_CODES } from "astro:actions"

const posts = await Astro.glob('./posts-old/*.{md,mdx}')
---

<MainLayout title="Axl's Blog">
  <!-- component -->
<section>
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">{ siteConfig.title }</h1>

        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
            {posts.map((post) => (
          <BlogPost frontmatter={post.frontmatter} url={post.url} />
        ))}
        </div>
    </div>
</section>
</MainLayout>


